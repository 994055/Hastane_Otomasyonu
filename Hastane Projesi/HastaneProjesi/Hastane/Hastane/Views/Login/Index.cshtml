
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Giriş Sayfası</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">

                </div>
            </div>
           
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap py-5">
                            <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4/login-form-19/images/sbresim.jpg);"></div>
                            <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                            <p class="text-center">Lütfen bilgilerinizi kutucuklara girin.</p>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                <form action="#" class="login-form">
                                    <div class="form-group">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                        <input name="email" type="text" class="form-control" placeholder="Kullanıcı Adı" required>
                                    </div>
                                    <div class="form-group">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                        <input name="sifre" type="password" class="form-control" placeholder="******" required>
                                    </div>
                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-md-left">
                                            <a href="#" style="color:red">@ViewBag.yanlisgiris</a>
                                        </div>
                                        <br />
                                         
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                                    </div>

                                </form>
                            }
                            <div class="form-group">
                                @Html.ActionLink("Hasta Giriş", "HastaGiris", "Hasta", "",new { @class = "btn form-control btn-close-white rounded submit px-3" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
    </section>
    <script>
        $(function () {
            $("p").click(function () {
                $(this).hide();
            });
           
        });
    </script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/main.js"></script>

</body>
</html>


