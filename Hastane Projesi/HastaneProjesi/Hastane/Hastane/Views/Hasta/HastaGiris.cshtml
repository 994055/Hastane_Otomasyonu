
@{
    ViewBag.Title = "HastaGiris";
    Layout = "~/Views/Shared/_LayoutHasta.cshtml";
}


<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Giriş Yap</h1>
            </div>

        </div>
    </div>
</div>

<div class="container container-int">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Anasayfa", "Index", "Hasta")</li>
        <li class="active">Giriş Yap</li>
    </ol>
    <div class="col-md-12 col-sm-8">

        @using (Html.BeginForm("HastaGiris", "Hasta", FormMethod.Post))
        {
            <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yapın</h1>
            <br />
            <br />        
            @Html.Label("", "Kullanıcı Adı", new { @class = "sr-only" })
            @Html.TextBox("Email", "", new { @class = "form-control", @placeholder = "Kullanıcı Adı", @required = "" })
            @Html.Label("", "Şifre", new { @class = "sr-only", @for = "inputPassword", @type = "password" })
            @Html.TextBox("Sifre", "", new { @class = "form-control", @placeholder = "Şifre", @type = "password", @required = "" })
            <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
            <br />
            <br />
            <p style="color: red">@ViewBag.hata</p>
        }
    </div>
</div>

