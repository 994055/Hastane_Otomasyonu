@model Hastane.Models.randevuList
@{
    ViewBag.Title = "HastaBilgiler";
    Layout = "~/Views/Shared/_LayoutHasta.cshtml";
}


<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Bilgilerim</h1>
            </div>

        </div>
    </div>
</div>

<div class="container container-int">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Anasayfa", "Index", "Hasta")</li>
        <li class="active">/Bilgilerim</li>
    </ol>
    <div class="col-md-12 col-sm-8">



        @using (Html.BeginForm("HastaBilgiler", "Hasta", FormMethod.Post))
        {
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Ad</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("ad", hasta.ad, new { @class = "form-control", @type = "text", @placeholder = "İsim Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Soyad</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("soyad", hasta.soyad, new { @class = "form-control", @type = "text", @placeholder = "Soyad Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">TC</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("tc", hasta.tc, new { @class = "form-control", @type = "text", @placeholder = "TC Giriniz", @required = "", @maxlength = "11", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Doğum Tarihi</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("dtarih", hasta.dtarih, new { @class = "form-control", @type = "date", @placeholder = "Tarih Giriniz", @required = "", @maxlength = "11" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Cinsiyet</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("cinsiyet", hasta.cinsiyet, new { @class = "form-control", @type = "text", @placeholder = "Cinsiyet Giriniz", @required = "", @maxlength = "5" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Baba Adı</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("babaad", hasta.babaad, new { @class = "form-control", @type = "text", @placeholder = "İsim Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Anne Adı</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("annead", hasta.annead, new { @class = "form-control", @type = "text", @placeholder = "İsim Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Adres</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("adres", hasta.adres, new { @class = "form-control", @type = "text", @placeholder = "Adres Giriniz", @required = "", @maxlength = "250", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Cep Telefonu</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("ceptel", hasta.ceptel, new { @class = "form-control", @type = "text", @placeholder = "Ceptel Giriniz", @required = "", @maxlength = "11", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Email</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("email", hasta.email, new { @class = "form-control", @type = "text", @placeholder = "Email Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Şifre</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("sifre", hasta.sifre, new { @class = "form-control", @type = "text", @placeholder = "Şifre Giriniz", @required = "", @maxlength = "50", @id = "ad" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Kan Grubu</span>
                </div>
                @foreach (var hasta in Model.hastaListesi)
                {
                    @Html.TextBox("kanGrubu", hasta.kanGrubu1.kangrubuAdi, new { @class = "form-control", @type = "text", @placeholder = "Kan Grubu Giriniz", @required = "", @maxlength = "50", @id = "ad",@readonly="readonly" })
                }
            </div>
            <button class="btn btn-lg btn-primary btn-block" id="btnguncelle" type="submit">Güncelle</button>
            <script>
                $('#btnguncelle').click(function () {

                    if ($.trim($("#adres").val()) != "" && $.trim($("#ad").val()) != "" && $.trim($("#soyad").val()) != "" && $.trim($("#tc").val()) != "" && $.trim($("#dtarih").val()) != "" &&
                        $.trim($("#annead").val()) != "" && $.trim($("#babaad").val()) != "" && $.trim($("#cinsiyet").val()) != "" && $.trim($("#ceptel").val()) != "" && $.trim($("#email").val()) != "" && $.trim($("#sifre").val()) != "" &&
                        $.trim($("#kanGrubu").val()) != "") {
                        alert('Bilgileriniz başarıyla güncellendi.')
                    }
                });
            </script>



        }




    </div>
</div>

