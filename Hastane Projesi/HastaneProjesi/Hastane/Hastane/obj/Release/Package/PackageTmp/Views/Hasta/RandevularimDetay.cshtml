@using Hastane.Models.Entity
@model Hastane.Models.randevuList
@{
    ViewBag.Title = "RandevularimDetay";
    Layout = "~/Views/Shared/_LayoutHasta.cshtml";
}
<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Randevu Detay</h1>
            </div>

        </div>
    </div>
</div>
<div class="container container-int">

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Anasayfa/", "Index", "Hasta")</li>
        <li>@Html.ActionLink("Randevularım", "Randevularim", "Hasta")</li>
        <li class="active">/Randevu Detay</li>
    </ol>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @foreach (var hasta in Model.randevuListesi)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => hasta.adsyad)</a>
                    }
                </th>

            </tr>
        </thead>
        <tbody>
            <tr class="table-primary">
                <th scope="row">Tarih</th>
                <td>
                    @foreach (var hasta in Model.randevuListesi)
                    {
                        string tarih = hasta.tarih.ToString();
                        string[] dizi = tarih.Split(' ');
                        string tut = dizi[0];
                        <a href="#" class="list-group-item list-group-item-action">@tut</a>
                    }
                </td>

            </tr>

            <tr class="table-primary">
                <th scope="row">Saat</th>
                <td>
                    @foreach (var hasta in Model.randevuListesi)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => hasta.saat1.saatzaman)</a>
                    }
                </td>

            </tr>
            <tr class="table-primary">
                <th scope="row">Doktor</th>
                <td>
                    @foreach (var hasta in Model.doktorListesi)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => hasta.ad) @Html.DisplayFor(modelItem => hasta.soyad)</a>
                    }
                </td>

            </tr>
            <tr class="table-primary">
                <th scope="row">Geldi mi</th>
                <td>
                    @foreach (var hasta in Model.randevuListesi)
                    {
                        if (hasta.geldimi == false)
                        {
                            <a href="#" class="list-group-item list-group-item-action">Henuz randevunuz gerçekleşmedi.</a>
                        }
                        else
                        {
                            <a href="#" class="list-group-item list-group-item-action">Randevunuz Gerçekleşti.</a>
                        }
                    }
                </td>

            </tr>

        </tbody>
    </table>

</div>

