@model Hastane.Models.doktorList
@{
    ViewBag.Title = "hastaneBilgiler";
    Layout = "~/Views/Shared/_LayoutDoktor.cshtml";
}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Bilgilerim</h1>
            </div>

        </div>
    </div>
</div>

<div class="container container-int">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Anasayfa", "Index", "Doktor")</li>
        <li class="active">/Bilgilerim</li>
    </ol>
    <div class="col-md-12 col-sm-8">



        @using (Html.BeginForm("KlinikGuncelle", "Yonetici", FormMethod.Post))
        {
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Klinik Adı</span>
                </div>
                @foreach (var klinik in Model.klinikListesi)
                {
                    @Html.TextBox("klinikadi", klinik.klinik1, new { @class = "form-control", @type = "text", @placeholder = "İsim Giriniz", @required = "", @maxlength = "50", @id = "klinikadi" })
                }
            </div>
            <div class="input-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="width:150px">Hangi Hastanede</span>
                </div>
                @foreach (var klinik in Model.klinikListesi)
                {
                    @Html.TextBox("sehiradi", klinik.hastane1.hastaneadi, new { @class = "form-control", @type = "text", @placeholder = "Soyad Giriniz", @required = "", @readonly = "readonly", @maxlength = "50", @id = "sehiradi" })
                }
            </div>

            <button class="btn btn-lg btn-primary btn-block" id="btnguncelle" type="submit">Güncelle</button>




        }
   
        <script>
            $(function () {
                $('#btnguncelle').click(function () {
                    if ($.trim($("#klinikadi").val()) != "" || $.trim($("#sehiradi").val()) != "") {
                        alert('Klinik Bilgileri başarıyla güncellendi');
                    }
                });
            });
        </script>


    </div>
</div>

