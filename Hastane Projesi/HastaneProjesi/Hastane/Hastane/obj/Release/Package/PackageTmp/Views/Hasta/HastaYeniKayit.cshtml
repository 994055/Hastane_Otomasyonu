@model Hastane.Models.Entity.kanGrubu
@{
    ViewBag.Title = "HastaYeniKayit";
    Layout = "~/Views/Shared/_LayoutHasta.cshtml";
}
 
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
 
<script>
    $(function () {
        $('#DPil').change(function () {
            var id = $('#DPil').val();
            $.ajax({
                url: '/Hasta/hastanegetir',
                data: { p: id },
                type: "POST",
                dataType: "Json",
                success: function (data) {
                    console.log(data);
                    $('#DPhastane').empty();
                    for (var i = 0; i < data.length; i++) {
                        $("#DPhastane").append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");
                    }
                }
            });
        });
    });
</script>
<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Kayıt Ol</h1>
            </div>

        </div>
    </div>
</div>

<div class="container container-int">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Anasayfa", "Index", "Hasta")</li>
        <li class="active">Kayıt Ol</li>
    </ol>
    <div class="col-md-12 col-sm-8">

        @using (Html.BeginForm("HastaYeniKayit", "Hasta", FormMethod.Post))
        {
            <h1 class="h3 mb-3 font-weight-normal">Lütfen Kayıt Olun</h1>
            <label for="inputName" class="sr-only">Ad</label>
            @Html.TextBox("ad", "", new { @class = "form-control", @type = "text", @placeholder = "İsim Giriniz", @required = "", @maxlength = "50" })
            <label for="inputLastName" class="sr-only">Soyad</label>
            @Html.TextBox("soyad", "", new { @class = "form-control", @type = "text", @placeholder = "Soyad Giriniz", @required = "", @maxlength = "50" })
            <label for="inputName" class="sr-only">Anne adı</label>
            @Html.TextBox("annead", "", new { @class = "form-control", @type = "text", @placeholder = "Anne adı Giriniz", @required = "", @maxlength = "50" })
            <label for="inputName" class="sr-only">Baba adı</label>
            @Html.TextBox("babaad", "", new { @class = "form-control", @type = "text", @placeholder = "Baba adı Giriniz", @required = "", @maxlength = "50" })
            <label for="inputTC" class="sr-only">TC</label>
            @Html.TextBox("tc", "", new { @class = "form-control", @type = "text", @placeholder = "TC Giriniz", @required = "", @maxlength = "11" })
            @Html.DropDownList("kangrubu", (List<SelectListItem>)ViewBag.kangrubu, new { @class = "form-control" })
            <label for="inputdt" class="sr-only">Soyad</label>
            @Html.TextBox("dtarih", "", new { @class = "form-control", @type = "date", @placeholder = "Tarih Giriniz", @required = "", @maxlength = "11" })
            <label for="inputcinsiyet" class="sr-only">Soyad</label>
            @Html.DropDownList("cinsiyet",
                             new List<SelectListItem> {
                                 new SelectListItem {
                                    Text="Erkek",
                                    Value="Erkek",
                                    Selected = false
                                 },
                                 new SelectListItem {
                                    Text="Kadın",
                                    Value="Kadın",
                                 },
                             }, "Cinsiyet Seçiniz", new { @class = "form-control" })
            <label for="inputEmail" class="sr-only">Email Adresi</label>
            @Html.TextBox("email", "", new { @class = "form-control", @type = "email", @placeholder = "Email Giriniz", @required = "", @maxlength = "60" })
            <label for="inputPassword" class="sr-only">Şifre</label>
            @Html.TextBox("sifre", "", new { @class = "form-control", @type = "password", @placeholder = "Şifre Giriniz", @required = "", @maxlength = "8" })
            <label for="inputNumber" class="sr-only">Numara</label>
            @Html.TextBox("ceptel", "", new { @class = "form-control", @type = "text", @placeholder = "Numara Giriniz", @required = "", @maxlength = "11" })
            <label for="inputAdress" class="sr-only">Adres</label>
            @Html.TextBox("adres", "", new { @class = "form-control", @type = "text", @placeholder = "Adres Giriniz", @required = "", @maxlength = "250" })


            <button class="btn btn-lg btn-primary btn-block" type="submit">Kayıt Ol</button>

        }




    </div>
</div>

